{
  "name": "middle-earth-agents-api",
  "version": "1.0.0",
  "description": "API server for Middle Earth Agents",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run",
    "prepare": "is-ci || husky",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "prestart": "npm run db:migrate",
    "predeploy": "npm run build && npm run db:migrate",
    "deploy": "npm run start",
    "docker:build": "HUSKY=0 docker build -t middle-earth-agents-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env middle-earth-agents-api"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.2",
    "@anthropic-ai/sdk": "0.34.0-alpha.0",
    "@coral-xyz/anchor": "^0.30.1",
    "@prisma/client": "^6.2.1",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.98.0",
    "agent-twitter-client": "0.0.18",
    "ai": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "natural": "^6.12.0",
    "node-cache": "^5.1.2",
    "prisma": "^6.2.1",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "husky": "^9.0.11",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
